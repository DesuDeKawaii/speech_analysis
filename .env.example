# ==========================================
# Megafon PBX API
# ==========================================
MEGAFON_HOST=https://mamolog.megapbx.ru/crmapi/v1
MEGAFON_KEY=your_megafon_key_here

# ==========================================
# Yandex Cloud
# ==========================================
# Folder ID вашего каталога (console.yandex.cloud -> ваш каталог -> ID)
YANDEX_FOLDER_ID=b1g...your_folder_id

# API-ключ сервисного аккаунта (или IAM-токен)
# Создать: IAM -> Сервисные аккаунты -> Создать -> Роли: ai.speechkit-stt.user, ai.languageModels.user
# Потом: Действия -> Создать API-ключ
YANDEX_API_KEY=AQVN...your_api_key

# Модель GPT
YANDEX_GPT_MODEL=yandexgpt-lite
# Альтернативы: yandexgpt (дороже, но умнее), yandexgpt-32k (для длинных контекстов)

# ==========================================
# Email (SMTP)
# ==========================================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465
SMTP_USER=reports@company.com
SMTP_PASSWORD=your_password
EMAIL_TO=manager@company.com

# ==========================================
# Настройки обработки
# ==========================================
ANALYSIS_MINUTES_TARGET=2000
RETRY_ATTEMPTS=3
TEMP_AUDIO_PATH=./temp_audio
